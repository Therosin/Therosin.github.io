---
import BaseLayout from "./BaseLayout.astro";
export interface Props {
	fullwidth?: boolean;
}

// props
 const props = Astro.props;
 const { fullwidth } = props;
 const mainClass = fullwidth ? "content-full" : "content-boxed"
---
<BaseLayout>
	<main class={mainClass}>
		<div class="content">
			<slot />
		</div>
		
	</main>
</BaseLayout>
